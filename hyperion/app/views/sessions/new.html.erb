<div class="login">

<%= form_for :session, url: sign_in_path do |f| %>
    <div class="field">
      <%= f.label :login %><br />
      <%= f.text_field :login, autofocus: true %>
    </div>
   
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <p>Novo usu√°rio? <%= link_to "Cadastrar!", new_user_path %></p>
  <% end %>
  
</div>
